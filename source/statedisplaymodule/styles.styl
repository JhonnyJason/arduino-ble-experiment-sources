// statedisplay styles
#statedisplay
    background-color rgba(0, 0, 0, 0.2)
    margin-bottom 300px
    margin-top: 80px
    padding 20px
    font-size: 20px

#feedback-block
    margin-bottom: 20px
#total-average-block
    text-align left
#total-average-title
    color grey
#total-package-number
    margin-left 50px
    margin-top 5px
#total-bytes
    margin-left 50px
    margin-top 5px
#total-assumed-connection-interval
    margin-left 50px
    margin-top 5px

#total-average-heading
    display flex
    align-items: center
    justify-content: space-between
    margin-bottom 10px


#chart-icon
    background-color: white
    color grey
    border-radius: 3px
    padding 5px
    box-sizing: border-box
    width: 30px
    height 30px
    cursor: pointer
