// banner styles
#banner
    background-color rgba(0, 0, 0, 0.2)
    position fixed
    top 5px
    left 0
    width: 100%
    box-sizing: border-box
    padding: 12px
    font-size: 25px
    border-bottom: solid white 3px
    color white
    display flex
    justify-content: space-between
    align-items: center

#settings-icon
    width: 40px
    height 40px
    cursor: pointer