// settingspage styles
//############################################################
#settingspage.active
    transform translateX(0)

#settingspage
    background-color rgba(0, 0, 0, 0.9)
    position fixed
    z-index: 99
    top 0
    lef 0
    height 100vh
    width 100%
    transform translateX(-102%)
    transition transform 0.4s

    h1
        font-size: 20px
        color white
    select
        padding 5px 5px
        box-sizing: border-box
        margin-top 20px
        width 100%
        font-size: 16px
        text-align center
        background-color: white
        border none

    select:focus
        padding 5px 5px
        box-sizing: border-box
        margin-top 20px
        width 100%
        font-size: 16px
        text-align center
        background-color: white
        border none

    h2
        font-size 16px
        color white
        margin-top 10px
        margin-bottom 10px

    input
        padding 5px 5px
        background white
        border none
        box-sizing: border-box
        color black
        width 80%
        font-size: 14px

    input:focus
        padding 5px 5px
        background white
        border none
        box-sizing: border-box
        color black
        width 80%
        font-size: 14px

    p
        padding 5px
        font-style: italic
        font-size: 12px
        color: #ccc

//############################################################
#back-from-settings-button
    background-color: white
    position absolute
    top 10px
    right 10px
    height 30px
    width 30px
    cursor pointer

//############################################################
#settings-content
    padding-top 50px
    padding-bottom 50px
    box-sizing: border-box
    width: 100%
    height 100vh
    overflow-y: scroll

//############################################################
.settings-content-separator
    width: 100%
    height 3px
    background-color: grey
    margin-top 20px
    margin-bottom 20px

#settings-content-separator-top
    width: 100%
    height 3px
    background-color: grey
    margin-bottom 20px

#settings-content-separator-bottom
    width: 100%
    height 3px
    background-color: grey
    margin-top 20px
