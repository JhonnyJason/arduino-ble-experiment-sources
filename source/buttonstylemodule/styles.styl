// buttonstyle styles
button-border-radius = 12px
button-padding = 10px 15px

button-color = #222
button-background-color = #fff
button-overlay-color = #fff

body
    .click-button
        text-decoration: none
        text-transform: uppercase
        position:relative
        top:0
        left:0
        padding: button-padding
        border-radius: button-border-radius
        display:inline-block
        transition: all .5s
        border-style: solid
        border-width: 2px
        background: button-background-color
        color: button-color


    .click-button::after
        content:""
        width:100%
        height:100%
        position:absolute
        top:0
        left:0
        border-radius:button-border-radius
        display:inline-block
        z-index:-1
        transform: scaleX(1.8) scaleY(1.8)
        opacity:0
        transition: all .5s
        background: button-overlay-color

    .click-button:active::after
        z-index: 1
        transform: scaleX(0.0) scaleY(0.0)
        opacity: 0.8
        transition all 0s


    .click-button:disabled
        color: #888
        background-color: #eee
        filter grayscale(100%)
    .click-button:disabled::after
        display: none
